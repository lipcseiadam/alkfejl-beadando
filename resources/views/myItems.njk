{% extends 'layout' %}

{% block content %}

<h2>EZAZ</h2>
<h2>{{ name }}</h2>

<div class="row">
  {% for category in categories %}
  <div class="col-md-4 col-sm-6">
    <div class="panel panel-default">
      <b><div class="panel-heading">
        {{ category.name }}
      </div></b>
      <ul class="list-group">
        {% for item in rents %}
        {%if item.user_id == currentUser.id %}
        <li class="list-group-item">
          <a href="/items/{{ item.item_id }}">
            {% if item.category_id == category.id %}
             {{ item.item_name }}
             {% endif %}
          </a>
        </li>
        {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}