{% extends 'layout' %}

{% block content %}

<h1>{{ item.name }} kölcsönzése</h1>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibalista</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

<form class="form-horizontal" action="" method="post">

  {{ csrfField }}

<div class="form-group">
    <label for="quantity" class="col-lg-2 control-label">Mennyiség (elérhető: {{item.quantity}})</label>
    <div class="col-lg-10">
      <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Mennyiség"
        value="{{ old('quantity') }}">
    </div>
</div>

<div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>

{% endblock %}